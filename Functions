bomb_mass = 1


# farenheit to celsius converter

def f_to_c(f_temp):
  c_temp = f_temp - 0.5  * 32               # our only input is farenheit so we are converting to celsius
  return c_temp


f100_in_celsius = f_to_c(100)

def c_to_f(c_temp):
  f_temp = c_temp * 9/5 + 32               # our only input is farenheit so we are converting to celsius
  return f_temp

c0_in_fahrenheit = c_to_f(0)

def get_force(mass,acceleration):
    return mass * acceleration
    
    
    
    
# Kilos to grams / grams to Kilos calculator 

def kg_to_g(k):
    kg = k * 1000
    return kg

print(kg_to_g(1.8))

def g_to_kg(gz):
    g = gz / 1000
    return g

print(g_to_kg(3))

