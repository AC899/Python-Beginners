import pyfiglet
import sys
import socket
import time
import os
import requests
from ping3 import ping, verbose_ping

#logo / banner
ascii_banner = pyfiglet.figlet_format("RECON TOOL", font = "slant")
print(ascii_banner + "Automating Enumeration since 2022")

time.sleep(0.5)

#nslookup
nsip = input("\nEnter your target website [example: google.com] : ")
nsresult = socket.gethostbyname(nsip)
print("IP address of host is {}".format(nsresult))

pingresult = ping(nsip)
if pingresult >= 0:
    print('host is up and responding to ping requests')
else:
    print('host is down and is not responding to ping requests')



